pipeline {
    agent any
	triggers{pollSCM(" * * * * * ")}
	stages {
        stage('Build') {
            steps {
               	sh 'dotnet build'
            }
       	}
        stage('Test') {
            steps {
                echo 'dotnet test'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def composeFile = "docker-compose.yml"
                    sh "docker-compose -f ${composeFile} up -d"
                }
            }
        }
    }
}